# Copy this file to .env and fill in your actual values
# DO NOT commit .env with real secrets to version control

###> symfony/framework-bundle ###
APP_ENV=prod
APP_SECRET=CHANGE_ME_IN_PRODUCTION_USE_32_CHARS
###< symfony/framework-bundle ###

###> doctrine/doctrine-bundle ###
# Format: mysql://user:password@host:port/database?serverVersion=8.0&charset=utf8mb4
DATABASE_URL="mysql://symfony:CHANGE_ME@db:3306/symfony?serverVersion=8.0&charset=utf8mb4"
###< doctrine/doctrine-bundle ###

###> docker configuration ###
# Docker MySQL Configuration
MYSQL_ROOT_PASSWORD=CHANGE_ROOT_PASSWORD
MYSQL_DATABASE=symfony
MYSQL_USER=symfony
MYSQL_PASSWORD=CHANGE_ME
MYSQL_PORT=3306

# Docker Web Configuration
WEB_PORT=8080
PHPMYADMIN_PORT=8081

# Worker Configuration
WORKER_REPLICAS=10
###< docker configuration ###

###> symfony/messenger ###
MESSENGER_TRANSPORT_DSN=doctrine://default?auto_setup=0
###< symfony/messenger ###

###> llm api configuration ###
# Validation LLM (fast, cheap model for quality checks)
VALIDATION_LLM_API_KEY=CHANGE_ME_YOUR_API_KEY_HERE
VALIDATION_LLM_API_ENDPOINT=https://openrouter.ai/api/v1/chat/completions
VALIDATION_LLM_MODEL=openai/gpt-4o-mini
# Alternative fast models:
# - openai/gpt-3.5-turbo
# - meta-llama/llama-3.1-8b-instruct
# - google/gemini-flash-1.5

# Generation LLM (main model for personalized response mimicry)
GENERATION_LLM_API_KEY=CHANGE_ME_YOUR_API_KEY_HERE
GENERATION_LLM_API_ENDPOINT=https://openrouter.ai/api/v1/chat/completions
GENERATION_LLM_MODEL=google/gemini-3-pro-preview
# Alternative generation models:
# - anthropic/claude-3.5-sonnet
# - openai/gpt-4-turbo
# - google/gemini-pro-1.5
###< llm api configuration ###

###> symfony/routing ###
# Configure how to generate URLs in non-HTTP contexts, such as CLI commands.
# See https://symfony.com/doc/current/routing.html#generating-urls-in-commands
DEFAULT_URI=http://localhost
###< symfony/routing ###
